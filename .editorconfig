# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
insert_final_newline = true
max_line_length = 120

[Makefile]
indent_style = tab

[Jenkinsfile]
indent_size = 2

[*.{js,css,scss,json,yml,toml}]
indent_size = 2
